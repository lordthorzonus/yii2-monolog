{
    "name": "leinonen/yii2-monolog",
    "type": "yii2-extension",
    "description": "Monolog extension for Yii2",
    "license": "MIT",
    "authors": [
        {
            "name": "Juuso Leinonen",
            "email": "leinonen.juuso@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3 | 8.0",
        "monolog/monolog": "^1.22",
        "yiisoft/yii2": "~2.0.11",
        "illuminate/collections": "^5.8 || ^6.0 || ^7.0 ||^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "leinonen\\Yii2Monolog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "leinonen\\Yii2Monolog\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "scripts" : {
        "post-install-cmd" : [
            "cp -n phpunit.xml.dist phpunit.xml"
        ]
    }
}
